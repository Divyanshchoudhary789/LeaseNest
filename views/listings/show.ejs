        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/moment.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
        <script>
            $(function() {
                let formattedBooked = bookedDates.map(d => moment(d, 'YYYY-MM-DD').format('YYYY-MM-DD'));

                $('input[name="daterange"]').daterangepicker({
                opens: 'left',
                minDate: moment().startOf('day'),
                autoApply: false,
                showDropdowns: true,
                locale: {
                    format: 'DD MMM YYYY',
                    separator: ' to ',
                    applyLabel: "Apply",
                    cancelLabel: "Cancel",
                    fromLabel: "From",
                    toLabel: "To",
                    daysOfWeek: ["Su", "Mo", "Tu", "We", "Th", "Fr", "Sa"],
                    monthNames: [
                    "January", "February", "March", "April", "May", "June",
                    "July", "August", "September", "October", "November", "December"
                    ],
                    firstDay: 1
                },
                isInvalidDate: function(date) {
                    return formattedBooked.includes(date.format('YYYY-MM-DD'));
                }
                }, function(start, end) {
                console.log("Selected Check-in: " + start.format('YYYY-MM-DD'));
                console.log("Selected Check-out: " + end.format('YYYY-MM-DD'));
                });

                $('form[action$="/booking"]').on('submit', function(e) {
                    let val = $('input[name="daterange"]').val();
                    if (!val) {
                        e.preventDefault();
                        return;
                    }
                    let [start, end] = val.split(' to ').map(s => moment(s, 'DD MMM YYYY'));
                    let range = [];
                    for(let d = moment(start); d.isSameOrBefore(end); d.add(1, 'days')) {
                        range.push(d.format('YYYY-MM-DD'));
                    }
                    let overlap = range.some(d => formattedBooked.includes(d));
                    if (overlap) {
                        e.preventDefault();
                        return;
                    }
                });
            });
        </script>


