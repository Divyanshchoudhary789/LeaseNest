<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3 class="mt-3 mb-3">Edit Listing</h3>
                <form method="post" class="needs-validation" novalidate
                    action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" name="title" class="form-control" value="<%= listing.title %>"
                            required>
                        <div class="valid-feedback">Title Looks Good!</div>
                        <div class="invalid-feedback">Please Enter a Title!</div>
                    </div>


                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea required id="description" name="description"
                            class="form-control"><%= listing.description %></textarea>
                        <div class="valid-feedback">Description Looks Good!</div>
                        <div class="invalid-feedback">Please enter a valid description!</div>
                    </div>

                    <div class="mb-3">
                        <p>Original Listing Image:</p>
                        <img src="<%= originalImageUrl %>" />
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input type="file" id="image" name="listing[image]" class="form-control">
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input required type="number" id="price" name="price" class="form-control "
                                value="<%= listing.price %>">
                            <div class="invalid-feedback">Please enter a valid price!</div>
                        </div>


                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input required type="text" id="country" name="country" class="form-control"
                                value="<%= listing.country %>">
                            <div class="invalid-feedback">Please enter a valid country name!</div>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <label for="category" class="form-label">Category</label>
                                <select id="category" class="form-select mb-3" name="category" required>
                                    <option value="Rooms">Rooms</option>
                                    <option value="Trending">Trending</option>
                                    <option value="Iconic Cities">Iconic Cities</option>
                                    <option value="Mountains">Mountains</option>
                                    <option value="Forests">Forests</option>
                                    <option value="Domes">Domes</option>
                                    <option value="Camping">Camping</option>
                                    <option value="Farms">Farms</option>
                                    <option value="Arctic">Arctic</option>
                                    <option value="Boats">Boats</option>
                                    <option value="Amazing Pools">Amazing Pools</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" name="location" class="form-control"
                            value="<%= listing.location %>" required>
                        <div class="invalid-feedback">Please enter a valid location!</div>
                    </div>

                    <button class="btn btn-dark mb-3 mt-3 edit-btn">Edit</button>
                </form>
            </div>
        </div>
    </body>