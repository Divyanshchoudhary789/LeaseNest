<% layout("/layouts/boilerplate") %>

    <style>
        #container {
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .filters {
            display: flex;
            align-items: center;
        }

        .filter p {
            font-size: 0.85rem;
        }

        .filter {
            text-align: center;
            margin-right: 1.8rem;
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
            opacity: 0.6;
            cursor: pointer;
        }

        .filter:hover {
            opacity: 1;
            border-bottom: 1.5px solid black;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid rgba(0, 0, 0, 0.747);
            height: 2.25rem;
            border-radius: 15px;
            padding: 0.5rem;
            display: flex;
            align-items: center;
            margin-left: 1.5rem;
            margin-top: -1.5rem;
        }

        .tax-toggle:hover {
            border: 1.5px solid black;
        }

        .slider-btn-left,
        .slider-btn-right i {
            font-size: 10px;
        }

        .slider-btn-right i {
            position: relative;
            bottom: 6px;
        }

        .slider-btn-left,
        .slider-btn-right {
            color: rgba(128, 128, 128, 0.856);
            height: 20px;
            width: 20px;
            text-align: center;
            position: relative;
            bottom: 6px;
            margin-left: 7px;
            margin-right: 7px;
            cursor: pointer;
        }

        @media(min-width: 768px) {
            .filters {
                flex-wrap: wrap;
            }

            .slider-btn-left {
                display: none;
            }

            .slider-btn-right {
                display: none;
            }

        }

        @media(min-width:768px) and (max-width:1399px) {
            .tax-toggle {
                display: none;
            }
        }

        @media(max-width:768px) {
            .filters {
                flex-wrap: nowrap;
                overflow-x: auto;
                scroll-behavior: smooth;
            }

            .filters::-webkit-scrollbar {
                display: none;
            }

            .tax-toggle {
                display: none;
            }
        }

        .message {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 300px;
            width:100%;
            text-align: center;
            font-size: 25px;
            
        }

        .clickStyle{
            background-color: grey;
        }
    </style>


    <body>
        <div id="container">
            <div class="slider-btn-left" id="prevBtn"><i class="fa-solid fa-less-than"></i></div>
            <div class="filters" id="filters">
                <div class="filter" category="Trending">
                    <div><i class="fa-solid fa-fire"></i></div>
                    <p>Trending</p>
                </div>

                <div class="filter" category="Rooms">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
                </div>

                <div class="filter" category="Iconic Cities">
                    <div><i class="fa-solid fa-mountain-city"></i></div>
                    <p>Iconic Cities</p>
                </div>

                <div class="filter" category="Mountains">
                    <div><i class="fa-solid fa-mountain"></i></div>
                    <p>Mountains</p>
                </div>

                <div class="filter" category="Amazing Pools">
                    <div><i class="fa-solid fa-person-swimming"></i></div>
                    <p>Amazing Pools</p>
                </div>

                <div class="filter" category="Camping">
                    <div><i class="fa-solid fa-campground"></i></div>
                    <p>Camping</p>
                </div>

                <div class="filter" category="Farms">
                    <div><i class="fa-solid fa-wheat-awn"></i></div>
                    <p>Farms</p>
                </div>

                <div class="filter" category="Arctic">
                    <div><i class="fa-solid fa-snowflake"></i></div>
                    <p>Arctic</p>
                </div>

                <div class="filter" category="Domes">
                    <div><i class="fa-solid fa-igloo"></i></div>
                    <p>Domes</p>
                </div>

                <div class="filter" category="Boats">
                    <div><i class="fa-solid fa-ship"></i></div>
                    <p>Boats</p>
                </div>

                <div class="filter" category="Forests">
                    <div><i class="fa-solid fa-tree"></i></div>
                    <p>Forests</p>
                </div>
            </div>
            <div class="slider-btn-right" id="nextBtn"><i class="fa-solid fa-greater-than"></i></div>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
            <% for(let listing of allListings){ %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                            style="height:20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b><br />
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> / month
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="tax-info">+15% GST</i>

                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>


        <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    </body>


    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");

        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                }
                else {
                    info.style.display = "none";
                }
            }
        });


        let slider = document.getElementById("filters");
        let prevBtn = document.getElementById("prevBtn");
        let nextBtn = document.getElementById("nextBtn");

        const scrollAmount = 150;

        prevBtn.addEventListener("click", () => {
            slider.scrollLeft -= scrollAmount;
        });

        nextBtn.addEventListener("click", () => {
            slider.scrollLeft += scrollAmount;
        })


        const allListings = <%- JSON.stringify(allListings) %>;

        const filterArray = document.querySelectorAll(".filter");
        filterArray.forEach((filter) => {
            filter.addEventListener("click", function () {
                const selectedCategory = this.getAttribute("category");
                let filteredListings = allListings.filter((listing) => {
                    return listing.category == selectedCategory;
                });

            
                if (filteredListings.length == 0) {
                    container.innerHTML = `<div class="message">
                        No listings found.<br>
                        <b>Coming Soon!<b>
                        </div>`;
                }
                renderListings(filteredListings);
            });
        });

        function renderListings(listings) {
            const container = document.querySelector('.row');
            container.innerHTML = '';
            listings.forEach(function (listing) {
                container.innerHTML += `
            <a href="/listings/${listing._id}" class="listing-link">
                <div class="card listing-card">
                    <img src="${listing.image.url}" class="card-img-top" alt="listing_image"
                        style="height:20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>${listing.title}</b><br />
                            &#8377; ${listing.price.toLocaleString("en-IN")} / night
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="tax-info">+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        `;
            });
        }


    </script>