    <script>

        document.addEventListener('DOMContentLoaded', function () {
    const lists = document.querySelectorAll('.list');

    lists.forEach(list => {
        const head = list.querySelector('.list-head');
        const detail = list.querySelector('.detail');
        const arrow = list.querySelector('.arrow');

        if (!head || !detail) return;

        // initial state
        detail.style.display = 'none';
        head.style.cursor = 'pointer';
        head.setAttribute('tabindex', '0');
        head.setAttribute('role', 'button');

        function toggle() {
            const opened = list.classList.toggle('open');
            detail.style.display = opened ? 'block' : 'none';
            // arrow rotation handled by CSS via .open class
        }

        head.addEventListener('click', toggle);

        head.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                toggle();
            }
        });
    });
});

    </script>